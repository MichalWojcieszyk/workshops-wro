- breadcrumb :payments
= link_to t('shared.add_new_item'), new_payment_path, class: 'btn btn-default'

%table.table.table-condensed.payments
  %thead
    %tr
      %th= t('payment.student.columns.decorate.full_name')
      %th= t('payment.columns.date')
      %th= t('payment.columns.sum')
      %th= t('shared.actions')
  %tbody
    = render payments